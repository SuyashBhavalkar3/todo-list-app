<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>To-Do List</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <header>
    <h1><%= exej %></h1>
  </header>

  <main>
    <!-- Form to Add New Todo -->
    <form action="/" method="POST" onsubmit="return validateForm()">
      <input type="text" name="ele1" placeholder="Add a new task..." id="taskInput"/>
      <select name="priority">
        <option value="High">High</option>
        <option value="Medium" selected>Medium</option>
        <option value="Low">Low</option>
      </select>
      <button type="submit">Add</button>
    </form>

    <!-- Filter Dropdown -->
    <form method="GET" action="/" class="filter-form">
      <label for="filter">Filter by Priority:</label>
      <select name="filter" onchange="this.form.submit()">
        <option <%= selectedPriority === 'All' ? 'selected' : '' %>>All</option>
        <option value="High" <%= selectedPriority === 'High' ? 'selected' : '' %>>High</option>
        <option value="Medium" <%= selectedPriority === 'Medium' ? 'selected' : '' %>>Medium</option>
        <option value="Low" <%= selectedPriority === 'Low' ? 'selected' : '' %>>Low</option>
      </select>
    </form>

    <!-- Task List -->
    <ul class="todo-list">
      <% itemsarray.forEach(function(item, index) { %>
        <li>
          <form action="/update" method="POST" class="edit-form">
            <input type="checkbox" onchange="toggleStrike(this)">
            <input type="hidden" name="index" value="<%= index %>"/>
            <input type="text" name="updatedItem" value="<%= item.text %>" class="task-input"/>
            <select name="updatedPriority">
              <option value="High" <%= item.priority === "High" ? 'selected' : '' %>>High</option>
              <option value="Medium" <%= item.priority === "Medium" ? 'selected' : '' %>>Medium</option>
              <option value="Low" <%= item.priority === "Low" ? 'selected' : '' %>>Low</option>
            </select>
            <button type="submit" class="edit-btn">âœ”</button>
          </form>

          <form action="/delete" method="POST">
            <input type="hidden" name="index" value="<%= index %>"/>
            <button type="submit" class="delete-btn">ðŸ—‘</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </main>

  <footer>
    <p>&copy; 2025 ToDo App. All rights reserved.</p>
  </footer>

  <script>
    function validateForm() {
      const taskInput = document.getElementById("taskInput");
      if (taskInput.value.trim() === "") {
        alert("Task cannot be empty!");
        return false;
      }
      return true;
    }

    function toggleStrike(checkbox) {
      const input = checkbox.parentElement.querySelector('.task-input');
      if (checkbox.checked) {
        input.style.textDecoration = "line-through";
        input.style.color = "#888";
      } else {
        input.style.textDecoration = "none";
        input.style.color = "#000";
      }
    }
  </script>
</body>
</html>
